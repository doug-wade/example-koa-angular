doctype html
html(lang="en")
  head
    title example-koa-angular
    link(rel="stylesheet", type="text/css", href="stylesheets/styles.css")
  body(ng-app="example-koa-angular")
    nav(class="navbar navbar-default")
      div(class="container-fluid")
        div(class="navbar-header")
          a(class="navbar-brand", href="#")
            img(alt="Brand", src="/images/yeoman.png")
          ul(class="nav navbar-nav")
            - for (var x = 0; x < 3; x++)
              li
                a(href="#") 'Allo
    div(class="contents", ng-controller="TechnologyController")
      h3 You got a new stack of HTML5 boilerplate using:
      ul
        li(ng-repeat="technology in technologies")
          a(class="btn btn-link", href="{{ technology.link }}") {{ technology.name }}          
    script(src="vendor/angular/bundles/angular2-polyfills.js")
    script(src="vendor/rxjs/bundles/Rx.umd.js")
    script(src="vendor/angular/bundles/angular2-all.umd.js")

    script(src="scripts/app.component.js")
    script(src="scripts/boot.js")
